<!-- dialog_product_detail.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageViewProductoDetalle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewProductoNombreDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start"
    android:layout_marginTop="8dp" />



    <TextView
        android:id="@+id/textViewProductoDescripcionDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="start"
    android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/textViewProductoPrecioDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="start"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/textViewProductoExistenciaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="start"
    android:layout_marginTop="4dp" />

</LinearLayout>
